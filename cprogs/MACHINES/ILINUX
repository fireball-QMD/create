		${PATH_FFTW_LIB}libfftw3xf_ifort.a ${PATH_FFTW_INCL} -lm  ${PATH_MKL}libmkl_intel_lp64.a

	OPTIMIZATION = -O2 -fno-alias -unroll -no-ipo -static
	ifneq (,$(findstring TRUE, ${DEBUG}))
		OPTIMIZATION = -g -check all  -no-ipo
	endif
